{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "checkJs": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declarationMap": true,
    "paths": {
      "@lib/*": ["lib/*"],
      "@services/*": ["services/*"],
      "@shared/*": ["shared/*"]
    },
    "baseUrl": "./src",
    "outDir": "dist",
    "target": "ES2022",
    "module": "CommonJS",
    "noImplicitAny": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}